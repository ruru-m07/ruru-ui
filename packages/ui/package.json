{
  "name": "ruru-ui",
  "version": "1.0.0-beta.1",
  "description": "Ruru UI Components",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "ruru",
    "url": "https://x.com/ruru_dev07"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ruru-m07/ruru-ui.git",
    "directory": "packages/ui"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "components",
    "ui",
    "tailwind",
    "radix-ui",
    "ruru-ui"
  ],
  "exports": {
    "./style.css": "./dist/style.css",
    "./twoslash.css": "./dist/twoslash.css",
    "./image-zoom.css": "./dist/image-zoom.css",
    "./tailwind-plugin": {
      "import": "./dist/tailwind-plugin.js",
      "require": "./dist/tailwind-plugin.cjs",
      "types": "./dist/tailwind-plugin.d.ts"
    },
    "./components/*": {
      "import": "./dist/components/*.js",
      "types": "./dist/components/*.d.ts"
    },
    "./provider": {
      "import": "./dist/provider/index.js",
      "types": "./dist/provider/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/cn.js",
      "types": "./dist/utils/cn.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "tailwind-plugin": [
        "./dist/tailwind-plugin.d.ts"
      ],
      "components/*": [
        "./dist/components/*.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "pnpm build:layout && pnpm build:tailwind",
    "build:layout": "tsup",
    "build:tailwind": "postcss css/*.css --dir dist",
    "clean": "rimraf dist",
    "dev": "concurrently \"pnpm dev:layout\" \"pnpm dev:tailwind\"",
    "dev:layout": "tsup --watch",
    "dev:tailwind": "postcss css/*.css --dir dist --watch",
    "lint": "eslint .",
    "types:check": "tsc --noEmit"
  },
  "devDependencies": {
    "@turbo/gen": "^1.12.4",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "postcss": "^8.4.39",
    "postcss-cli": "^11.0.0",
    "postcss-lightningcss": "^1.0.0",
    "tailwindcss": "^3.4.4",
    "tsconfig": "workspace:*",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-direction": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@swc/core": "^1.6.13",
    "@tailwindcss/typography": "^0.5.13",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "next-themes": "^0.3.0",
    "react": "^18.2.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^8.1.1"
  }
}
